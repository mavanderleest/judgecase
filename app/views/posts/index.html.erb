<div class="cards">
  <% @posts.each do |post| %>
      <a href="<%= post_path(post) %>">
        <div class="card">
          <div class="card-image">
            <img src="<%= post.image.url %>>" alt="">
          </div>
          <div class="card-header">
            <%= post.title %>
          </div>
          <div class="card-copy">
            <p><%= post.body.truncate(150) %></p>
          </div>
        </div>
      </a>
  <% end %>
</div>
